<div class="page-header container">
    
<h1>
    Bryan College Station Public Library<br/>
    Summer Reading Program
</h1>

</div>

<div class="row">
  
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:m_login, url: m_login_path, class:"form-signin") do |f| %>

      <h2 class="form-signin-heading center">Staff Sign in</h2>
      <%= f.label :name,:class=>"sr-only"%>
      <%= f.text_field :name, class: 'form-control',:placeholder=>"UserName" %>

      <%= f.label :password ,:class=>"sr-only"%>
      <%= f.password_field :password, class: 'form-control',:placeholder=>"Password"  %>

      <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
    <% end %>
  </div>
  </div>
</div>
